---
interface Props {
  datetime?: Date;
  format?: Intl.DateTimeFormatOptions;
  class?: string;
}

const {
  datetime = new Date(),
  format = {
    month: "long",
    day: "numeric",
    year: "numeric",
    hour: "numeric",
    minute: "2-digit",
    second: "numeric",
    timeZoneName: "short",
    timeZone: "UTC",
  },
  ...rest
} = Astro.props;
---

<time {...rest} datetime={datetime.toISOString()}
  ><strong>{datetime.toLocaleDateString("en-US", format)}</strong></time
>
